     &            top_surf_solid_eps_n(:,:),                  ! (mxvl,nstr)
     &            bott_surf_solid_eps_n(:,:),                 ! (mxvl,nstr)
     &            nonlocal_stvals_bott_n(:,:),                ! (mxvl,nxx)
     &            nonlocal_stvals_top_n(:,:)                  ! (mxvl,nxx)
